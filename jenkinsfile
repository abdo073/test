pipeline {
    agent any

    tools {
        nodejs "NodeJS-18"
    }

    environment {
        SONAR_URL = "http://98.94.36.3:9000"
        SONAR_PROJECT_KEY = "frontend-gig-router"
        SONAR_PROJECT_NAME = "Gig Router Frontend"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo 'üîÑ Checking out code...'
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    sh '''
                        echo "üì¶ Building frontend..."
                        rm -rf node_modules build
                        npm install
                        npm run build
                        echo "‚úÖ Build completed!"
                    '''
                }
            }
        }

        stage('Unit Test') {
            steps {
                dir('frontend') {
                    sh '''
                        echo "üß™ Running unit tests..."
                        npm test -- --coverage --watchAll=false --passWithNoTests || true
                        echo "‚úÖ Unit tests completed!"
                    '''
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('frontend') {
                    withSonarQubeEnv('Sonarqube') {
                        withCredentials([string(credentialsId: 'mazen-sonerqube', variable: 'SONAR_TOKEN')]) {
                            script {
                                echo 'üîç Running SonarQube analysis...'
                                def scannerHome = tool 'SonarQubeScanner'
                                sh """
                                    ${scannerHome}/bin/sonar-scanner \
                                      -Dsonar.login=$SONAR_TOKEN \
                                      -Dsonar.host.url=$SONAR_URL \
                                      -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                      -Dsonar.projectName='${SONAR_PROJECT_NAME}' \
                                      -Dsonar.projectVersion=${BUILD_NUMBER} \
                                      -Dsonar.sources=src \
                                      -Dsonar.tests=src \
                                      -Dsonar.test.inclusions=**/*.test.js,**/*.spec.js \
                                      -Dsonar.exclusions=**/node_modules/**,**/build/**
                                """
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
